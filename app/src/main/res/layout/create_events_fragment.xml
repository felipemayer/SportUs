<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:orientation="vertical"
              android:padding="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Nome do Evento"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/eventNameInput"
        style="@style/InputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dê um nome para seu evento!"
        android:imeOptions="actionDone"
        android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Endereço"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <AutoCompleteTextView
        android:id="@+id/eventAddressInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/autocomplete_hint"
        android:singleLine="true"
        style="@style/InputStyle"
        android:ems="5"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Modalidade"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_drop_down"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/eventTypeInput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:gravity="center"
            android:hint="Dê um nome para seu evento!"
            android:popupBackground="#ffffff"
            android:spinnerMode="dropdown"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/arrow_down"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Data"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/eventDateInput"
                style="@style/InputStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:hint="Selecione o dia"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Horário"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/eventHourInput"
                style="@style/InputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:hint="Selecione o horário"
                android:focusableInTouchMode="false"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:id="@+id/radioPayment">

                <RadioButton
                    android:id="@+id/radioFreeInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#ffffffff"
                    android:checked="true"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:drawableTint="#ffffff"
                    android:onClick="onRadioButtonClicked"
                    android:text="Gratuito"
                    android:textColor="#ffffffff"
                    />

                <RadioButton
                    android:id="@+id/radioPayedInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#ffffffff"
                    android:onClick="onRadioButtonClicked"
                    android:text="Pago"
                    android:textColor="#ffffffff"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/eventCostInput"
                    style="@style/InputStyle"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Informe o preço"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:inputType="number"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonEventInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffffff"
        android:text="Criar"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>