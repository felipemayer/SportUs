<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/progressBarHome"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Holo.Light.ProgressBar.Small.Title"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:elevation="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonHome"
        android:layout_alignEnd="@+id/buttonHome"/>

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/ripple_red"
        android:text="@string/button_see_events"
        android:textColor="#ffffffff"/>

</RelativeLayout>